{{ define "volume_cloned_step1" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    type   = "g6-nanode-1"
    region = "{{ .Region }}"
    label = "{{.Label}}"
    image = "linode/ubuntu20.04"
    authorized_keys = ["{{.PubKey}}"]
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

resource "linode_instance" "foobar2" {
    type   = "g6-nanode-1"
    region = "{{ .Region }}"
    label = "{{.Label}}-2"
    authorized_keys = ["{{.PubKey}}"]
    image = "linode/ubuntu20.04"
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

resource "linode_volume" "foobar" {
    label = "{{.Label}}"
    region = "{{ .Region }}"
    tags = ["tf_test"]
    size = 10

    linode_id = linode_instance.foobar.id
}

{{ end }}

