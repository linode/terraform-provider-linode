    tags = ["tf_test"]
    size = 20

    linode_id = linode_instance.foobar.id
}

resource "linode_volume" "foobar-cloned" {
    source_volume_id = linode_volume.foobar.id

    label = "{{.Label}}-c"
    region = "us-west"
    tags = ["tf_test"]
    size = 25

    linode_id = linode_instance.foobar2.id
}

{{ end }}