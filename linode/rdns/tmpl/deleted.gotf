{{ define "rdns_deleted" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    image = "linode/alpine3.18"
    type = "g6-standard-1"
    region = "{{ .Region }}"
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

data "linode_networking_ip" "foobar" {
    address = "${linode_instance.foobar.ip_address}"
}

{{ end }}

