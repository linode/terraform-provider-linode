{{ define "domains_data_base" }}

resource "linode_domain" "foo" {
    domain = "{{.Domain}}"
    type = "master"
    status = "active"
    soa_email = "example@{{.Domain}}"
    description = "tf-testing"
    tags = ["tf_test"]
}

resource "linode_domain" "bar" {
    domain = "slave-{{.Domain}}"
    type = "slave"
    soa_email = "example@{{.Domain}}"
    description = "tf-testing"
    tags = ["tf_test"]
    master_ips = ["12.34.56.78"]
}

{{ end }}