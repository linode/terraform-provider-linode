{{ define "lke_cluster_labelled_pools" }}

resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "{{ .Region }}"
    k8s_version = "{{.K8sVersion}}"
    tags        = ["test"]
    tier = "standard"

    pool {
        type  = "g6-standard-2"
        count = 2
        label = "{{ .PoolLabel }}"
    }
}

{{ end }}