{{ define "lke_cluster_autoscaler" }}

resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "us-central"
    k8s_version = "{{.K8sVersion}}"
    tags        = ["test"]
    pool {
        autoscaler {
            min = 1
            max = 5
        }
        type  = "g6-standard-2"
        count = 3
    }
}

{{ end }}