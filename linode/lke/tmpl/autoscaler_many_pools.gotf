{{ define "lke_cluster_autoscaler_many_pools" }}

resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "us-central"
    k8s_version = "1.20"
    tags        = ["test"]
    pool {
        autoscaler {
            min = 3
            max = 8
        }
        type  = "g6-standard-4"
        count = 5
    }
    pool {
        autoscaler {
            min = 1
            max = 8
        }
        type  = "g6-standard-2"
        count = 3
    }
}

{{ end }}