{{ define "lke_cluster_updates" }}

resource "linode_lke_cluster" "test" {
    label       = "{{.Label}}"
    region      = "{{ .Region }}"
    k8s_version = "{{.K8sVersion}}"
    tags        = ["test", "new_tag"]

    pool {
        type  = "g6-standard-2"
        count = 4
        tags  = ["test", "test-2"]
    }
}

{{ end }}