{{ define "instance_interfaces_update" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    type = "g6-nanode-1"
    region = "{{ .Region }}"
    image = "{{.Image}}"

    interface {
        purpose = "public"
    }

    interface {
        purpose = "vlan"
        label = "tf-really-cool-vlan"
        ipam_address = "10.0.0.2/24"
    }
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

{{ end }}