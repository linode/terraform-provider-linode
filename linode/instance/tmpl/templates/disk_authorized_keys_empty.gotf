{{ define "instance_disk_authorized_keys_empty" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    type = "g6-nanode-1"
    region = "{{ .Region }}"

    disk {
        label = "boot"
        size = 4096
        image = "{{.Image}}"
        authorized_keys = [""]
        root_pass = "{{.RootPass}}"
    }
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

{{ end }}