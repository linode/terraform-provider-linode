{{ define "instance_maintenance_policy" }}

{{ template "e2e_test_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    type = "g6-nanode-1"
    image = "{{.Image}}"
    region = "{{ .Region }}"
    maintenance_policy = "{{ .MaintenancePolicy }}"
    root_pass = "{{ .RootPass }}"
    swap_size = 256
    authorized_keys = ["{{.PubKey}}"]
    firewall_id = linode_firewall.e2e_test_firewall.id
}

{{ end }}