{{ define "instance_data_with_lock" }}
resource "linode_lock" "my-lock" {
  entity_id   = linode_instance.my-inst.id
  entity_type = "linode"
  lock_type   = "{{ .LockType }}"
}

resource "linode_instance" "my-inst" {
  label  = "{{ .Label }}"
  region = "{{ .Region }}"
  type   = "g6-nanode-1"
}

data "linode_instances" "test" {
  depends_on = [linode_lock.my-lock]
  filter {
    name = "id"
    values = [linode_instance.my-inst.id]
  }
}
{{ end }}
