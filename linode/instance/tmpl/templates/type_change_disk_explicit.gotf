{{ define "instance_type_change_disk_explicit" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    type = "{{.Type}}"
    region = "{{ .Region }}"

    # We expect this to fail as the user has defined their own disks
    {{ if .ResizeDisk }} resize_disk = {{.ResizeDisk}} {{ end }}

    disk {
        label = "disk"
        size = 6000
    }

    firewall_id = linode_firewall.linode_cloud_firewall.id
}

{{ end }}