{{ define "instance_watchdog_disabled" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label     = "{{.Label}}"
    region    = "{{ .Region }}"
    image     = "{{.Image}}"
    type      = "g6-nanode-1"
    root_pass = "{{ .RootPass }}"

    watchdog_enabled = false
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

{{ end }}