{{ define "database_access_controls_mysql" }}

resource "linode_database_mysql" "foobar" {
    engine_id = "{{.Engine}}"
    label = "{{.Label}}"
    region = "us-southeast"
    type = "g6-nanode-1"
}

resource "linode_database_access_controls" "foobar" {
    database_id = linode_database_mysql.foobar.id
    database_type = "mysql"

    allow_list = ["{{.AllowedIP}}"]
}

{{ end }}
