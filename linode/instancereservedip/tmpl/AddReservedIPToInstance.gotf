{{ define "instance_ip_add_reservedIP" }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    group = "tf_test"
    type = "g6-nanode-1"
    region = "{{ .Region }}"
    image = "linode/debian12"
}

resource "linode_instance_reserved_ip" "test" {
    linode_id = linode_instance.foobar.id
    public = true
    address = "{{ .Address}}"
}

{{ end }}