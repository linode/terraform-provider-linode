{{ define "vlan_data_regex" }}

resource "linode_instance" "fooinst" {
    label = "{{.InstLabel}}"
    type = "g6-standard-1"
    image = "linode/alpine3.15"
    region = "us-southeast"

    interface {
        label = "{{.VLANLabel}}-new"
        purpose = "vlan"
    }
}

data "linode_vlans" "foolan" {
    order_by = "region"
    order = "desc"

    filter {
        name = "label"
        values = ["{{.VLANLabel}}-n.*"]
        match_by = "regex"
    }
}

{{ end }}