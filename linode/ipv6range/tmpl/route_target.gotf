{{ define "ipv6range_route_target" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    type = "g6-nanode-1"
    region = "{{ .Region }}"
    booted = false
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

resource "linode_ipv6_range" "foobar" {
    route_target = linode_instance.foobar.ipv6

    prefix_length = 64
}

{{ end }}