{{ define "ipv6range_race_condition" }}

{{ template "linode_cloud_firewall" . }}

resource "linode_instance" "foobar" {
    count = 5

    label = "{{.Label}}-${count.index}"
    type = "g6-nanode-1"
    region = "{{ .Region }}"
    booted = false
    firewall_id = linode_firewall.linode_cloud_firewall.id
}

resource "linode_ipv6_range" "foobar" {
    count = 5

    linode_id = linode_instance.foobar[count.index].id

    prefix_length = 64
}

{{ end }}