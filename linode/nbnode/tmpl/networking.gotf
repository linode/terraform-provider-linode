{{ define "nodebalancer_node_networking" }}

resource "linode_instance" "foobar" {
    label = "{{.Label}}"
    type = "g6-nanode-1"
    image = "linode/ubuntu18.04"
    region = "{{ .Region }}"
    root_pass = "{{ .RootPass }}"
    swap_size = 256
    private_ip = true
    authorized_keys = ["{{.PubKey}}"]
    group = "tf_test"
}

{{ end }}