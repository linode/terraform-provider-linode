{{ define "firewall_inst" }}

resource "linode_instance" "{{.ID}}" {
    label = "{{.Prefix}}-{{.ID}}"
    group = "tf_test"
    type = "g6-nanode-1"
    region = "{{ .Region }}"
    disk {
        label = "disk"
        image = "linode/alpine3.15"
        root_pass = "{{ .RootPass }}"
        authorized_keys = ["{{.PubKey}}"]
        size = 3000
    }
}

{{ end }}