{{ define "firewall_no_ipv6" }}

resource "linode_firewall" "test" {
    label = "{{.Label}}"
    tags  = ["test"]

    inbound {
        label    = "tf-test-in"
        action   = "ACCEPT"
        protocol = "TCP"
        ports    = "80"
        ipv4     = ["0.0.0.0/0"]
        ipv6     = []
    }

    inbound_policy = "DROP"
    outbound_policy = "DROP"

    linodes = []
}

{{ end }}